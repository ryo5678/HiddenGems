<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.hiddengems.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.hiddengems.search.SearchScreenFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search_screen" />
    <fragment
        android:id="@+id/navigation_add"
        android:name="com.example.hiddengems.AddScreenFragment"
        android:label="Add"
        tools:layout="@layout/fragment_add_screen" />
    <activity
        android:id="@+id/navigation_map"
        android:name="com.example.hiddengems.map.MapsActivity"
        android:label="Map"
        tools:layout="@layout/activity_maps" />
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.hiddengems.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />
</navigation>